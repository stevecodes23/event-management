        .ticket {
            border: 2px dashed #333;
            padding: 20px;
            width: 60%;
            margin: auto;
            background: #f9f9f9;
        }
        h2 {
            color: #444;
        }
        .details {
            margin-top: 15px;
            font-size: 18px;
        }
    </style>
</head>
<body>
    <div class="ticket">
